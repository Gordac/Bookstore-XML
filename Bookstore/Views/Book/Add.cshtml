@model Bookstore.Models.Book

@{
    ViewBag.Title = "Add";
}

    <div>

        <h1>Create new book</h1>
        @using (Html.BeginForm("CreateNew", "Book", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <span>Title</span><br /> @Html.TextBoxFor(model => model.title) <br />
            <span>Author</span><br /> @Html.TextBoxFor(model => model.author) <br />
            <span>Price</span><br /> @Html.TextBoxFor(model => model.price) <br />
            <span>Cover(.jpg, .png, etc)</span><br /> @Html.TextBoxFor(model => model.cover) <br />
            <span>Description</span><br /> @Html.TextAreaFor(model => model.description, new { style="width:400px; height:100px;"}) <br />

            <input type="submit" id="Submit" value="submit" />

        }

    </div>

